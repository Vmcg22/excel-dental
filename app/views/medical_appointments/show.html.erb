<div class="container">
    <div class="notification is-primary"> 
        <p class="title is-2"> Consulta Médica del <%= @medical_appointment.fecha.strftime("%m/%d/%Y - %I:%M%p") %> </p>
    </div>
  
  <th>  
    <button class="button is-outlined">
      <%= link_to "Volver Expediente Médico", controller: "welcome", action: "show", id: @medical_appointment.patient_id%>
    </button>
  </th>

  <br> <br>

  <table class="table is-bordered">
    <thead>
      <tr>
        <th><abbr>Motivo de Consulta</abbr></th>
        <% if current_user.id == 42 || current_user.id == 45 %>
        <th>Acciones</th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th> <%= @medical_appointment.motivo%> </th>
        <% if current_user.id == 42 || current_user.id == 45 %>
          <th> 
            <button class="button is-outlined">
              <%= link_to "Editar", controller: "medical_appointments", action: "edit", id: @medical_appointment.id%>
            </button>
          </th>
        <%end%>
      </tr>
    </tbody>
  </table>


</div>
