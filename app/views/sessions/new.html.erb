

<%= form_tag login_path do |form| %>

    <div class="container">

        <div class="notification is-primary"> 
            <p class="title is-2"> Iniciar Sesión</p>
        </div>
        
        <div class="buttons">
            <div class="buttons">
                <button class="button is-outlined">
                    <%= link_to "Salir", :back %>
                </button> 
            </div>
        </div>

        <br> <br>

        <div class="field">
            <label class="label">Número de Teléfono</label>
            

            <div class="control">
                <%= text_field_tag :email, nil, placeholder: "Ej. 8671264856", class: 'input' %>
            </div>

        </div>

        <div class="field">
            <label class="label">Contraseña</label>

            <div class="control">
                <%= password_field_tag :password , nil, class: 'input' %>
            </div>
        </div>

        <%= submit_tag nil, class: 'button is-primary' %>

    </div>
<% end %>